<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD SQL 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="ssn.lmj.user.db.dao.SPermissionDAO">

    <resultMap id="sPermissionDOResult" type="ssn.lmj.user.db.dobj.SPermissionDO">
        <result column="id" property="id"/>
        <result column="domain" property="domain"/>
        <result column="varchar64" property="varchar64"/>
        <result column="name" property="name"/>
        <result column="cmmt" property="cmmt"/>
        <result column="create_at" property="createAt"/>
        <result column="modified_at" property="modifiedAt"/>
        <result column="is_delete" property="isDelete"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="ssn.lmj.user.db.dobj.SPermissionDO">
        insert into `s_permission` (`id`,`domain`,`varchar64`,`name`,`cmmt`,`create_at`,`modified_at`,`is_delete`) values (#{id},#{domain},#{varchar64},#{name},#{cmmt},(unix_timestamp() * 1000),(unix_timestamp() * 1000),#{isDelete})
    </insert>

    <insert id="insertOrUpdate" useGeneratedKeys="true" keyProperty="id" parameterType="ssn.lmj.user.db.dobj.SPermissionDO">
        insert into `s_permission` (`id`,`domain`,`varchar64`,`name`,`cmmt`,`create_at`,`modified_at`,`is_delete`) values (#{id},#{domain},#{varchar64},#{name},#{cmmt},(unix_timestamp() * 1000),(unix_timestamp() * 1000),#{isDelete}) on duplicate key update 
        <if test="domain != null">
            ,`domain` = #{domain}
        </if>
        <if test="varchar64 != null">
            ,`varchar64` = #{varchar64}
        </if>
        <if test="name != null">
            ,`name` = #{name}
        </if>
        <if test="cmmt != null">
            ,`cmmt` = #{cmmt}
        </if>
            ,modified_at = (unix_timestamp() * 1000) 
        <if test="isDelete != null">
            ,`is_delete` = #{isDelete}
        </if>
    </insert>

    <update id="update" parameterType="ssn.lmj.user.db.dobj.SPermissionDO">
        update `s_permission` set 
        <if test="domain != null">
            ,`domain` = #{domain}
        </if>
        <if test="varchar64 != null">
            ,`varchar64` = #{varchar64}
        </if>
        <if test="name != null">
            ,`name` = #{name}
        </if>
        <if test="cmmt != null">
            ,`cmmt` = #{cmmt}
        </if>
            ,modified_at = (unix_timestamp() * 1000) 
        <if test="isDelete != null">
            ,`is_delete` = #{isDelete}
        </if>
        where id = #{id} 
    </update>

    <delete id="deleteById">
        delete from `s_permission` where id = #{id} 
    </delete>

    <select id="getById" resultMap="sPermissionDOResult">
        select `id`,`domain`,`varchar64`,`name`,`cmmt`,`create_at`,`modified_at`,`is_delete` 
        from `s_permission` 
        where id = #{id} 
    </select>

    <select id="getByIdForUpdate" resultMap="sPermissionDOResult">
        select `id`,`domain`,`varchar64`,`name`,`cmmt`,`create_at`,`modified_at`,`is_delete` 
        from `s_permission` 
        where id = #{id} 
        for update 
    </select>

    <select id="queryByIds" resultMap="sPermissionDOResult">
        select `id`,`domain`,`varchar64`,`name`,`cmmt`,`create_at`,`modified_at`,`is_delete` 
        from `s_permission` 
        where id in 
        <foreach collection="list" item="theId" index="index" 
             open="(" close=")" separator=","> 
             #{theId}  
        </foreach>  
    </select>

    <select id="queryByDomain" resultMap="sPermissionDOResult">
        select `id`,`domain`,`varchar64`,`name`,`cmmt`,`create_at`,`modified_at`,`is_delete` 
        from `s_permission` 
        where `domain` = #{domain}
        <if test="sortField != null and sortField != ''">
            order by `${sortField}` <if test="isDesc"> desc </if> 
        </if>
        limit #{limit}
    </select>

</mapper>

