        insert into `s_user_ext` (`id`,`uid`,`data_type`,`data_value`,`cmmt`,`create_at`,`modified_at`,`is_delete`) values (#{id},#{uid},#{dataType},#{dataValue},#{cmmt},(unix_timestamp() * 1000),(unix_timestamp() * 1000),#{isDelete}) on duplicate key update 
