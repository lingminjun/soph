            ,`is_delete` = #{isDelete}
        </if>
    </insert>

    <update id="update" parameterType="ssn.lmj.user.db.dobj.SUserExtDO">
        update `s_user_ext` set 
        <if test="uid != null">
            ,`uid` = #{uid}
        </if>
        <if test="dataType != null">
            ,`data_type` = #{dataType}
        </if>
        <if test="dataValue != null">
            ,`data_value` = #{dataValue}
        </if>
        <if test="cmmt != null">
            ,`cmmt` = #{cmmt}
        </if>
            ,modified_at = (unix_timestamp() * 1000) 
        <if test="isDelete != null">
            ,`is_delete` = #{isDelete}
        </if>
        where id = #{id} 
    </update>

    <delete id="deleteById">
        delete from `s_user_ext` where id = #{id} 
