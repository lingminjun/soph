<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD SQL 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="ssn.lmj.user.db.dao.SUserExtDAO">

    <resultMap id="sUserExtDOResult" type="ssn.lmj.user.db.dobj.SUserExtDO">
