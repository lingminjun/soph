        select `id`,`uid`,`data_type`,`data_value`,`cmmt`,`create_at`,`modified_at`,`is_delete` 
        from `s_user_ext` 
        where id in 
        <foreach collection="list" item="theId" index="index" 
             open="(" close=")" separator=","> 
             #{theId}  
        </foreach>  
